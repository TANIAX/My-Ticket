<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyTicketWearable.Views.ToastPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout Margin="0, 50, 0, 50">
            <Button
                Text="Toast"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                Clicked="OnToastClicked"/>
            <Button
                Text="Toast with delay"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                Clicked="OnToastWithDelayClicked"/>
            <Button
                Text="Toast with icon"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                Clicked="OnToastWithIconClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
